{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "COVID-19 Active Cases (10 Oct 2020)",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
        "url": "https://raw.githubusercontent.com/JunJie0149/FIT-3179-Week-9-Homework/refs/heads/main/dataset/Electricity%20Consumption%20(World).json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "https://github.com/JunJie0149/FIT-3179-Week-9-Homework/blob/main/dataset/Electricity%20Consumption%20(World).csv?plain=1"
                },
                "key": "Country",
                "fields": ["Active"]
            }
        },
        {"calculate": "datum.Active + 0.1", "as": "Active Cases"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": {
            "field": "Active Cases",
            "type": "quantitative",
            "scale": {"type": "log"}
        },
        "tooltip": [
            {"field": "properties.COUNTRY", "type": "nominal", "title": "Country"},
            {"field": "Active", "type": "quantitative"}
        ]
    }
}