{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Electricity Consumption Around The World",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "config": {
        "background": "lightcyan"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/JunJie0149/FIT-3179-Week9_and_Week10_Homework/refs/heads/main/dataset/ne_110m.json",
                "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {
                "type": "geoshape",
                "stroke": "lightblue",
                "strokeWidth": 1.0,
                "fill": null
            }
        },    
        {
            "data": {
                "url": "https://raw.githubusercontent.com/JunJie0149/FIT-3179-Week9_and_Week10_Homework/refs/heads/main/dataset/ne_110m.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "transform": [
                {
                "lookup": "properties.NAME",
                "from": {
                    "data": {
                        "url": "https://raw.githubusercontent.com/JunJie0149/FIT-3179-Week9_and_Week10_Homework/refs/heads/main/dataset/electricity_consumption.csv"
                    },
                    "key": "countries",
                    "fields": ["electricity_consumption"]
                    }
                }
            ],
            "mark": {"type": "geoshape"},
            "encoding": {
                "color": {
                    "field": "electricity_consumption",
                    "type": "quantitative",
                    "scale": {
                        "type": "log",
                        "scheme": "tealblues"
                    }
                },
                "tooltip": [
                    {"field": "properties.NAME", "type": "nominal", "title": "Country:"},
                    {"field": "electricity_consumption", "type": "quantitative", "title": "Electricity Consumption (KWh):"}
                ]
            }
        }
    ]
}